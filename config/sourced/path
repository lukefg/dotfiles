DOTFILES_BIN="${HOME}/Repos/git/dotfiles/bin"
JAVA_HOME_1_7="/Library/Java/JavaVirtualMachines/jdk1.7.0_71.jdk/Contents/Home/bin"
JAVA_HOME_1_8="/Library/Java/JavaVirtualMachines/jdk1.8.0_251.jdk/Contents/Home/bin"

# Use a parameter to switch Java versions @TODO
if [ "$1" == "1.8" ]
then
    PATH="${JAVA_HOME_1_8}:${PATH}"
elif [ "$1" == "1.7" ]
then
    PATH="${JAVA_HOME_1_8}:${PATH}"
fi

# Ordered last to first
PATH="/Users/luke/Library/Python/2.7/bin:${PATH}" # python
PATH="/Users/luke/Library/Android/sdk/platform-tools:${PATH}" # android platform tools
PATH="/Users/luke/Dropbox/Sync/bin:${PATH}" # dropbox

if [ -d ${DOTFILES_BIN} ]
then
	PATH="${DOTFILES_BIN}:${PATH}"
	export PATH
else
	echo "Dotfiles bin cannot be found."
fi

export PATH

# Order should be
# Dropbox
# Android Studio
# Python
# Java if special version
# User local bin
# User bin
# Bin
# User sbin
# Sbin
# User local share dotnet
# ~/.dotnet/tools
# /Library/Apple/usr/bin
# /Library/Frameworks/Mono.framework/Versions/Current/Commands
